@model List<StudentApp.Models.Class>
@{
    ViewData["Title"] = "Đăng ký lớp";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-success text-white py-3">
                    <h3 class="mb-0">
                        <i class="fas fa-user-plus me-2"></i>Đăng ký lớp học
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="EnrollClass" method="post" class="needs-validation" novalidate>
                        <div class="mb-4">
                            <label for="classId" class="form-label fw-semibold">
                                <i class="fas fa-chalkboard me-2"></i>Chọn lớp muốn đăng ký
                            </label>
                            <select name="classId" id="classId" class="form-select form-select-lg" required>
                                <option value="" selected disabled>-- Chọn lớp --</option>
                                @foreach (var cls in Model)
                                {
                                    <option value="@cls.ClassId">@cls.ClassName</option>
                                }
                            </select>
                            <div class="invalid-feedback">
                                Vui lòng chọn một lớp học
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-check-circle me-2"></i>Xác nhận đăng ký
                            </button>
                        </div>
                    </form>

                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-info mt-4">
                            <i class="fas fa-info-circle me-2"></i>@ViewBag.Message
                        </div>
                    }
                </div>
                <div class="card-footer bg-light text-center">
                    <a href="@Url.Action("ClassList")" class="text-decoration-none">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách lớp
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Đã di chuyển script ra khỏi section và đặt trước thẻ đóng body -->
<script>
    // Form validation
    document.addEventListener('DOMContentLoaded', function () {
        'use strict';

        var forms = document.querySelectorAll('.needs-validation');

        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
    });
</script>