@{
    ViewData["Title"] = "Trang chính";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-primary text-white py-4">
                    <h1 class="display-5 fw-bold mb-0">Chào mừng đến với Hệ thống Sinh viên</h1>
                </div>
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="fas fa-graduation-cap fa-4x text-primary mb-3"></i>
                        <p class="lead text-muted">
                            Tại đây bạn có thể xem lớp học, đăng ký lớp và quản lý thông tin cá nhân.
                        </p>
                    </div>

                    <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                        <a href="@Url.Action("ClassList")" class="btn btn-primary btn-lg px-4 gap-3">
                            <i class="fas fa-list me-2"></i>Xem lớp học
                        </a>
                        <a href="@Url.Action("Enroll")" class="btn btn-outline-primary btn-lg px-4">
                            <i class="fas fa-pencil-alt me-2"></i>Đăng ký lớp
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>