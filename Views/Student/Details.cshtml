@model StudentApp.Models.Student
@{
    ViewData["Title"] = "Chi tiết sinh viên";
}
<div class="container mt-4">
    <h2 class="text-primary mb-4">@ViewData["Title"]</h2>
    <div class="row">
        <!-- Cột ảnh và thông tin cơ bản -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <img src="@(string.IsNullOrEmpty(Model.PhotoUrl) ? "/images/default-avatar.jpg" : Model.PhotoUrl)"
                        class="img-thumbnail rounded-circle mb-3" width="150" height="150" alt="Avatar" />
                    <h4 class="mb-1">@Model.FirstName @Model.LastName</h4>
                    <p class="text-muted mb-2">Mã SV: @Model.RollNumber</p>
                    <span class="badge bg-@(Model.Status == StudentStatus.Active ? "success" : "secondary")">
                        @Model.Status
                    </span>
                </div>
            </div>
        </div>

        <!-- Cột thông tin chi tiết -->
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Thông tin chi tiết</h5>
                </div>
                <div class="card-body">
                    <p><strong>Giới tính:</strong> @Model.Gender</p>
                    <p><strong>Ngày sinh:</strong> @Model.DateOfBirth.ToString("dd/MM/yyyy")</p>
                    <p><strong>Mã nhập học:</strong> @Model.AdmissionNo</p>
                    <p><strong>Ngày nhập học:</strong> @Model.AdmissionDate.ToString("dd/MM/yyyy")</p>
                    <p><strong>Tôn giáo:</strong> @Model.Religion</p>
                    <p><strong>Địa chỉ:</strong> @Model.Address</p>
                    <p><strong>SĐT:</strong> @Model.PhoneNumber</p>
                    <p><strong>Lớp:</strong> @Model.CurrentClassId</p>

                    <div class="mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary me-2">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.StudentId" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Chỉnh sửa
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
