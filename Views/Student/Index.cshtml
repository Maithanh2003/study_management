@model StudentApp.Utils.PagedResult<StudentApp.Models.Student>
@{
    ViewData["Title"] = "Quản lý sinh viên";
}
<div class="container mt-4">
    <h2 class="text-primary mb-4">@ViewData["Title"]</h2>
    <div class="mb-3 text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Thêm sinh viên
        </a>
    </div>

    <form asp-action="Index" method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="search" value="@ViewContext.HttpContext.Request.Query["search"]"
                class="form-control" placeholder="Tìm kiếm sinh viên..." />
            <button class="btn btn-outline-secondary" type="submit">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>Họ tên</th>
                    <th>Giới tính</th>
                    <th>Ngày sinh</th>
                    <th>Trạng thái</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model.Items)
                {
                    <tr>
                        <td>@student.FirstName @student.LastName</td>
                        <td>@student.Gender</td>
                        <td>@student.DateOfBirth.ToShortDateString()</td>
                        <td>
                            <span
                                class="badge rounded-pill bg-@(student.Status == StudentStatus.Active ? "success" : "warning")">
                                @student.Status
                            </span>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@student.StudentId" class="btn btn-sm btn-info">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@student.StudentId" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
                @if (!Model.Items.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted">Không tìm thấy sinh viên nào</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- PHÂN TRANG -->
    <partial name="_Pagination" model="Model" view-data="ViewData" />
</div>
