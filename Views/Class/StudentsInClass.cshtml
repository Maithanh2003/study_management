@model List<StudentApp.Models.Student>
@{
    ViewData["Title"] = "Danh sách sinh viên";
    var className = ViewBag.ClassName as string ?? "Lớp chưa rõ";
}

<div class="container mt-4">
    <h2 class="text-primary">Danh sách sinh viên - @className</h2>

    @if (Model.Count == 0)
    {
        <div class="alert alert-warning">Lớp này chưa có sinh viên nào.</div>
    }
    else
    {
        <div class="table-responsive mt-3">
            <table class="table table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Ảnh</th>
                        <th>Họ tên</th>
                        <th>Giới tính</th>
                        <th>Ngày sinh</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>
                                <img src="@(string.IsNullOrEmpty(student.PhotoUrl) ? "/images/default-avatar.jpg" : student.PhotoUrl)"
                                    class="rounded-circle" width="40" height="40" />
                            </td>
                            <td>@student.FirstName @student.LastName</td>
                            <td>@student.Gender</td>
                            <td>@student.DateOfBirth.ToShortDateString()</td>
                            <td>
                                <span class="badge bg-@(student.Status == StudentStatus.Active ? "success" : "secondary")">
                                    @student.Status
                                </span>
                            </td>
                            <td>
                                <a asp-controller="Student" asp-action="Details" asp-route-id="@student.StudentId"
                                    class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    <a asp-action="Index" class="btn btn-outline-secondary mt-3">
        <i class="fas fa-arrow-left"></i> Quay lại danh sách lớp
    </a>
</div>
