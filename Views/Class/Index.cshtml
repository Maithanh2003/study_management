@model List<StudentApp.Models.Class>
@{
    ViewData["Title"] = "Quản lý lớp học";
}

<div class="container-fluid">
    <h2 class="text-primary mb-4">@ViewData["Title"]</h2>

    <div class="row mb-3">
        <div class="col-md-6">
            <form asp-action="Index" method="get">
                <div class="input-group">
                    <input type="text" name="search" value="@ViewBag.SearchQuery" class="form-control"
                        placeholder="Tìm kiếm lớp học..." />
                    <button class="btn btn-outline-secondary" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> Thêm lớp học
            </a>
        </div>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">Không có lớp học nào.</div>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>Mã lớp</th>
                    <th>Tên lớp</th>
                    <th>Mô tả</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ClassId</td>
                        <td>@item.ClassName</td>
                        <td>@item.Description</td>
                        <td>
    <a asp-action="Edit" asp-route-id="@item.ClassId" class="btn btn-sm btn-warning">
        <i class="fas fa-edit"></i>
    </a>
    <a asp-action="Delete" asp-route-id="@item.ClassId" class="btn btn-sm btn-danger">
        <i class="fas fa-trash"></i>
    </a>
</td>

                    </tr>
                }
            </tbody>
        </table>
    }
</div>
